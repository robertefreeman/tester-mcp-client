{
  "extends": "@apify/tsconfig",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "dist",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "lib": ["ES2022"],
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
